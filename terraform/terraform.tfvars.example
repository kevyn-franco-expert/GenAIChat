# AWS Region
aws_region = "us-east-1"

# Environment
environment = "dev"

# S3 Bucket Name
cv_bucket_name = "cv-assistant-bucket"

# ECR Repository Name
ecr_repository_name = "cv-assistant"

# ECS Cluster Name
ecs_cluster_name = "cv-assistant-cluster"

# VPC and Subnet IDs (replace with your actual values)
vpc_id = "vpc-12345678"
subnet_ids = ["subnet-12345678", "subnet-87654321"]

# ECS Task Resources
task_cpu = "1024"
task_memory = "2048"
service_desired_count = 1

# AI Service Configuration
# Choose which AI service to use
use_openai = true  # Set to true to use OpenAI, false to use Bedrock

# Bedrock Configuration (used when use_openai = false)
bedrock_model_id = "anthropic.claude-3-sonnet-20240229-v1:0"
bedrock_embedding_model = "amazon.titan-embed-text-v1"

# OpenAI Configuration (used when use_openai = true)
openai_model = "gpt-4"
